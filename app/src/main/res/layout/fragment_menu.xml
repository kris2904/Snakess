<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/menu_snake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="300dp"
        android:src="@drawable/snakeicon" />
    <LinearLayout
        android:id="@+id/startLayout"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bottonStart_of_my_Game"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/button_stroke_blake_prass_white"
            android:text="Моя игра!" />

        <Button
            android:id="@+id/bottonStart_your_Game"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@drawable/button_stroke_blake_prass_white"
            android:text="Чужая игра!"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/bottonGame_off"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@drawable/button_stroke_blake_prass_white"
            android:text="Выйти!"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>